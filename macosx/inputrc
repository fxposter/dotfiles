# Ignore case when completing, very nice!
set completion-ignore-case on

# "\e[5C": forward-word    # Ctrl+right
# "\e[5D": backward-word    # Ctrl+left
# "\e\e[C": forward-word    # Alt+right
# "\e\e[D": backward-word    # Alt+left

set meta-flag on
set input-meta on
set output-meta on
set convert-meta off
