[color]
	ui = auto
[user]
	name = Pavel Forkert
	email = fxposter@gmail.com
[github]
	user = fxposter
[push]
	default = tracking
	autoSetupRemote = true
[core]
	excludesfile = ~/.gitignore
	editor = '/Applications/Sublime Text.app/Contents/SharedSupport/bin/subl' -w
[branch]
	autosetuprebase = always
[alias]
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue) <%an>%Creset' --abbrev-commit
	l = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue) <%an>%Creset' --abbrev-commit --
	lp = log -p --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue) <%an>%Creset' --abbrev-commit --
[credential]
	helper = osxkeychain
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
